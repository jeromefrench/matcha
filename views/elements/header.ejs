<!DOCTYPE html>
<html>
	<head>
		<title>
			<% if (locals.title) {%>
			<%= locals.title %>
			<% }else{%>
			<%= "Matcha"%>
			<%}%>
		</title>
		<link rel="stylesheet" href="/assets/semantic/dist/semantic.min.css">
<script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>
<script src="/assets/semantic/dist/semantic.min.js"></script>

	</head>
	<body>
		<div className="ui inverted segment">
  			<div className="ui inverted secondary menu">
				<a href="/about-you" className="item">About you</a>
				<a href="/my-account" className="item">My account</a>
				<a href="/research" className="item">Research</a>
				<a href="http://localhost:3001/" className="item">New Research</a>
				<div className="right menu">
                	<div className="ui teal buttons">
                    	<div className="ui simple dropdown icon button">
						<% if (session.logon) {%>
							<i className="sign out alternate icon"></i>
						<% }else{ %>
							<i className="sign in alternate icon"></i>
						<% } %>
            	            <div className="menu">
								<% if (!session.logon) { %>
									<% if (locals.title == "Sign Up") {} else{ %>
										<div className="item"><a href="/sign-up" style="color:black"><b>Sign up</b></a></div>
									<% } %>
									<% if (locals.title == "Sign In") {} else{ %>
										<div className="item"><a href="/sign-in" style="color:black"><b>Sign in</b></a></div>
									<% } %>
								<% }else{ %>
									<div className="item"><a href="/sign-out" style="color:black"><b>Sign out</b></a></div>
								<% } %>
                        	</div>
                    	</div>
					</div>
				</div>
			</div>
  		</div>
		<div style="margin-left: 5vmin" >


			<% if (locals.session && locals.session.logon) {%>
			<%= locals.session.login %>
			<% }else{%>
			<%= "Your not log on"%>
			<%}%>
			</br>
