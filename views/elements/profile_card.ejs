<%
	var str = user.path_photo;
	var patt = /^http/;
	var res = patt.test(str)

	if (res){
		//c'est un lien
		pic_link = user.path_photo;
	}else {
		//c'est pas un lien
		pic_link = user.path_photo.replace('public/', '');
		pic_link = "/assets"+pic_link;
	}

%>


<div class="card">
	<div class="blurring dimmable image">
		<div class="ui dimmer">
			<div class="content">
				<div class="center">
					<!-- <div class="ui inverted button">View profile</div> -->
					<%- include('view_profile', {login: user.login}); %>
				</div>
			</div>
		</div>
		<!-- <% pic_link = user.path_photo.replace('public/', '');%> -->
	<img src="<%= pic_link %>" >
	</div>
	<div class="content">
		<a class="header"><%= user.login %> </a>
		<div class="meta">
			<span class="date">Created in Sep 2014</span>
		</div>
	</div>
	<div class="extra content">
		<a>
			<i class="users icon"></i>
			2 Members
		</a>
	</div>
</div>

