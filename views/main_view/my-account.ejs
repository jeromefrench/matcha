<%- include('../elements/header.ejs') %>
<div class="ui container" style="margin-top: 30px">
	<div class="ui middle aligned center aligned grid">
		<form method="POST" action="/my-account" class="ui large form">
			<h2 class="ui teal image header">
				<div class="content">
					Account informations
				</div>
			</h2>
			<div class="ui stacked segment">
				<div class="inline field">
					<div class="field"> <label>Last Name</label> </div>
					<input type="text" name="lname" <%- include('../check_field/val.ejs', {val: locals.user['lname']}); %>required>
					<% if (locals.ans.check_field['lname']) { %>
					<%- include('../check_field/empty.ejs', {empty: locals.ans.check_field['lname']}); %>
					<% } %>
				</div>
				<div class="inline field">
					<div class="field"> <label>First Name</label> </div>
					<input type="text" name="fname" <%- include('../check_field/val.ejs', {val: locals.user['fname']}); %>required>
					<% if (locals.ans.check_field['fname']) { %>
					<%- include('../check_field/empty.ejs', {empty: locals.ans.check_field['fname']}); %>
					<% } %>
				</div>
				<div class="inline field">
					<div class="field"> <label>Mail</label> </div>
					<input type="email" name="mail" <%- include('../check_field/val.ejs', {val: locals.user['mail']}); %>required>
					<% if (locals.ans.check_field['mail']) { %>
					<%- include('../check_field/check_mail.ejs', {check_mail: locals.ans.check_field['mail']}); %>
					<% } %>
				</div>
				<div class="inline field">
					<div class="field"> <label>Login</label> </div>
					<input type="text" name="login" <%- include('../check_field/val.ejs', {val: locals.user['login']}); %>required>
					<% if (locals.ans.check_field['login']) { %>
					<%- include('../check_field/check_login.ejs', {check_login: locals.ans.check_field['login']}); %>
					<% } %>
				</div>
				<div class="inline field">
					<div class="field"> <label>New password</label> </div>
					<input type="password" name="npass">
					<% if (locals.ans.check_field['passwd']) { %>
					<%- include('../check_field/check_passwd.ejs', {check_passwd: locals.ans.check_field['passwd']}); %>
					<% } %>
				</div>
				<div class="inline field">
					<div class="field"> <label>Verification</label> </div>
					<input type="password" name="verif" >
				</div>
    			<div class="ui fluid">
    				<input type="submit" class="ui fluid primary button" value="Change">
    			</div>
			</div>
		</form>
	</div>
</div>
<%- include('../elements/footer.ejs') %>
