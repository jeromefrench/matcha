<%- include('../elements/header.ejs') %>
<div class="ui container" style="margin-top: 30px">
	<div class="ui middle aligned center aligned grid">
		<form method="POST" action="/sign-up" class="ui large form">
			<h2 class="ui teal image header">
				<div class="content">
					Sign-up
				</div>
			</h2>
			<div class="ui stacked segment">
				<div class="field">
					<label>Last name</label>
				</div>
				<div class="inline field">
					<input type="text" name="lname" placeholder="Last name" <%- include('../check_field/val.ejs', {val: locals.ans['lname']}); %>required>
					<% if (locals.ans['check_lname']) { %>
						<%- include('../check_field/empty.ejs', {empty: locals.ans['check_lname']}); %>
					<% } %>
				</div>
				<div class="field">
					<label>First name</label>
				</div>
				<div class="inline field">
					<input type="text" name="fname" placeholder="First name" <%- include('../check_field/val.ejs', {val: locals.ans['fname']}); %>required>
					<% if (locals.ans['check_fname']) { %>
						<%- include('../check_field/empty.ejs', {empty: locals.ans['check_fname']}); %>
					<% } %>
				</div>
				<div class="field">
					<label>Email</label>
				</div>
				<div class="inline field">
					<input type="email" name="email" placeholder="Email" <%- include('../check_field/val.ejs', {val: locals.ans['email']}); %>required>
					<% if (locals.ans['check_email']) { %>
						<%- include('../check_field/check_mail.ejs', {mailexist: session.mailexist, empty: session.emailwrong}); %>
					<% } %>
				</div>
				<div class="field">
					<label>Login</label>
				</div>
				<div class="inline field">
					<input type="text" name="login" placeholder="Login" <%- include('../check_field/val.ejs', {val: locals.ans['login']}); %>required>
					<% if (locals.ans['check_login']) { %>
						<%- include('../check_field/check_login.ejs', {check_login: locals.ans['check_login']}); %>
					<% } %>
				</div>
				<div class="field">
					<label>Password</label>
				</div>
				<div class="inline field">
					<input type="password" name="passwd" placeholder="Password" required>
						<% if (locals.ans['check_passwd']) { %>
					<%- include('../check_field/check_passwd.ejs', {check_passwd: locals.ans['check_passwd']}); %>
						<% } %>
				</div>
				<div class="field">
					<label>Retype Password</label>
				</div>
				<div class="inline field">
					<input type="password" name="verif" placeholder="Password" required>
				</div>
    			<div class="ui fluid">
    				<input type="submit" class="ui fluid primary button" value="Create">
    			</div>
			</div>
		</form>
	</div>
</div>
<%- include('../elements/footer.ejs') %>
