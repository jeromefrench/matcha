<%- include('../elements/header.ejs') %>
<div class="ui container" style="margin-top: 30px">
	<div class="ui middle aligned center aligned grid">
		<form method="POST" action="/change-passwd/<%= locals.login %>/<%= locals.num %>" class="ui form">
			<div class="ui center aligned header">
				<h2>Change password</h2>
			</div>
			<div class="inline field">
				<input type="password" name="npass" placeholder="New password" required>
				<% if (locals.ans['check_passwd']) { %>
					<%- include('../check_field/check_passwd.ejs', {check_passwd: locals.ans['check_passwd']}); %>
				<% } %>
			</div>
			<div class="inline field">
				<input type="password" name="verif" placeholder="Verification" required>
			</div>
			<input type="submit" class="ui primary button" value="Submit">
		</form>
	</div>
</div>
<%- include('../elements/footer.ejs') %>
